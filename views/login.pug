extend base
block content
    h2 
        | Login
    form.login
        .entry
            .entry-text 
                | Email
            input(type='email' name='email' placeholder='Your Email' required)
        .entry
            .entry-text 
                | Password
            input(type='password' name='password' placeholder='Your Password' required)
        .btn-parent
            button.btn.btn-full.form-button(type='submit') Log In
